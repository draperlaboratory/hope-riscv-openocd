.PHONY: all
.PHONY: install
.PHONY: clean

ISP_PREFIX ?= $(HOME)/.local/isp/
PWD = $(shell pwd)

all: Makefile
	$(MAKE) -C $(PWD)/openocd

Makefile:
	cd  $(PWD)/openocd && ./bootstrap
	./configure --prefix=$(ISP_PREFIX) --enable-remote-bitbang --enable-jtag_vpi --enable-ftdi -enable-doxygen-pdf

install:
	$(MAKE) -C $(PWD)/install

clean: Makefile
	$(MAKE) -C ($(PWD)/openocd clean
